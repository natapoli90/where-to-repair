<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="parallax-container">
  <div class="parallax">
    <img class = "responsive-img" src="/form.jpg">
  </div>
  <div class="container">
    <div class="card-panel default-primary-color form">
      <span class="primary-text-color">
        <h3>Login</h3>
        <%= form_for @admin, url: '/login', method: 'post' do |f|  %>
          <%= f.text_field :email, placeholder: "Email" %>
          <%= f.password_field :password, placeholder: "Password" %>
          <%= f.submit  "Submit", class: "btn waves-effect waves-light lime darken-1"%>
        <% end %>
        </form>
      </span>
    </div>
  </div>
</div>
